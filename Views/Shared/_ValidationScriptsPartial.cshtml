    $.validator.addMethod("notEqualToList", function (value, element, param) {
        var notEqual = true;
        console.log(value);
        $(param).each(function () {
            console.log($(this).val());
            if (value === $(this).val()) {
                notEqual = false;
            }
        });
        return notEqual;
    }, "Field is identical to another field, you have to make sure of your input!");
</script>
