<div class="row">
	<div class="col-12">
		@if (ViewBag.pageList != null)
		{
			<ul class="cat-line">
				@foreach (PageCategory item in ViewBag.pageList)
				{
					<li class="clearfix">
						@if (item.Page.Thumb != null)
						{
							<div class="cat-line-thumb">
								@if (item.Page.Url != null)
								{
									<a href="@Url.Content(item.Page.Url)" class="urllink"><img src="@Url.Content(item.Page.Thumb)"
											class="img-fluid list-img"></a>
								}
								else
								{
									<a href="@Url.Action("Details","Pages",new{id=item.Page.PageId,title=item.Page.Title})"
										class="linkimg"><img src="@Url.Content(item.Page.Thumb)" class="img-fluid list-img"></a>
								}
							</div>
						}

						@{
							try
							{
								if (!string.IsNullOrEmpty(item.Page.Url))
								{
									<div class="text cat-title">
										@if (item.Page.ShowDate)
										{
											<span class="sdate float-end">تاريخ النشر: @item.Page.PageDate.ToString("dd-MM-yyyy")</span>
											<br>
										}
										<a class='btitle1' href="@Url.Content(item.Page.Url.ToString())">@item.Page.Title</a>
									</div>
								}
								else
								{
									<div class="text cat-title">
										@if (item.Page.ShowDate)
										{
											<span class="sdate float-end">تاريخ النشر: @item.Page.PageDate.ToString("dd-MM-yyyy")</span>

											<br>
										}
										<a class='btitle1'
											href="@Url.Action("Details","Pages",new{id=item.Page.PageId,title=item.Page.Title})">@item.Page.Title</a>
									</div>
								}
							}
							catch (Exception ex)
							{
								<span>@ex.Message</span>
							}
						}

						<span class="stext">@Html.Raw(item.Page.Summary)</span>

					</li>
				}
			</ul>
		}
	</div>
</div>
