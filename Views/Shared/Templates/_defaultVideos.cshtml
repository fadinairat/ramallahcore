@{
	var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}
<div class="row">
	<div class="@(ViewBag.Related!=null ? "col-12 col-sm-12 col-md-9" : "col-12 col-md-12")">
		@if (Model.ShowThumb)
		{
			<div class="row">
				<div class="col-12 text-center">
					@if (Model.Thumb2 != null && Model.Thumb2 != "")
					{
						<img src="@Url.Content(Model.Thumb2)" class="article_img">
					}
					else if (Model.Thumb != null && Model.Thumb != "")
					{
						<img src="@Url.Content(Model.Thumb)" class="article_img">
					}
				</div>
			</div>
		}
		<div class="row page_content videos_cont">
			@Html.Raw(Model.Body)
		</div>
	</div>
	@{
		if (ViewBag.Related != null)
		{
			<div class="col-12 col-md-3 pt-5">
				<div style="background-color:white;padding:7px;">
					<span style="font-weight:700;" class="text-right">مكتبة الفيديو</span>
					<ul class="relatedList">
						@{
							List<PageCategory> related = ViewBag.Related;
							foreach (PageCategory item in related)
							{
								<li><a
										href="@Url.Action("Details","Pages",new{id=item.Page.PageId,title=item.Page.Title})">@item.Page.Title</a>
								</li>
							}
						}
					</ul>
				</div>
			</div>
		}
	}
</div>
